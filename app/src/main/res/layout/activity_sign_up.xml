<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightSteelBlue"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.chaes.projectlittlecare.LCClass.SignUp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/WhiteSmoke"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="com.example.chaes.projectlittlecare.LCClass.FindInfo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="0dp"
            android:rowCount="8">

            <TextView
                android:id="@+id/signUpID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="아이디"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="70dp" />

            <EditText
                android:id="@+id/sign_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#E6E6E6"
                android:ems="10"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="60dp" />

            <TextView
                android:id="@+id/signUpPwV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="비밀번호"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="120dp" />

            <EditText
                android:id="@+id/sign_pw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#E6E6E6"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLength="11"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="108dp" />

            <TextView
                android:id="@+id/signUpNameV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="이름"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="70dp" />

            <EditText
                android:id="@+id/sign_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#E6E6E6"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:selectAllOnFocus="false"
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="60dp" />

            <TextView
                android:id="@+id/signUpBirthV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="생년월일"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="120dp" />

            <EditText
                android:id="@+id/sign_birth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#E6E6E6"
                android:ems="10"
                android:inputType="date"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="108dp" />

            <TextView
                android:id="@+id/signUpPhoneV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전화번호"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="120dp" />

            <EditText
                android:id="@+id/sign_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#E6E6E6"
                android:ems="10"
                android:inputType="phone"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="108dp" />

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:background="@color/Yulbtn"
                android:elevation="0dp"
                android:text="회원가입"
                android:textAllCaps="false"
                android:textColor="@color/WhiteSmoke"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="86dp"
                tools:layout_editor_absoluteY="385dp" />

        </GridLayout>

    </FrameLayout>

</LinearLayout>
